---
layout: default
---

<h2 class="text-3xl font-bold mt-16 mb-10">Build fast and have fun.</h2>

<h2 class="text-2xl mt-8 mb-3">Featured Projects</h2>
<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
  <script type="module" src="https://ajax.googleapis.com/ajax/libs/model-viewer/3.1.1/model-viewer.min.js"></script>
  <% collections.projects.resources.each do |project| %>
    <% next unless project.data.featured %>
    <a href="<%= project.data.direct_link || project.relative_url %>" class="block btn-secondary !p-0">
      <% if project.data.model %>
        <div class="flex justify-center">
          <model-viewer src="models/<%= project.data.model %>" 
            class="w-[140px] h-[140px]"
            alt="A 3D model of a black shiny brain" 
            poster="models/<%= project.data.poster %>"
            auto-rotate 
            auto-rotate-delay=0
            exposure="5.0" 
            data-js-focus-visible
            loading='eager'
            camera-orbit="180deg 90deg">
          </model-viewer>
        </div>
      <% else %>
        <div class="aspect-video bg-cover bg-center h-[140px] max-w-full" style="background-image:url(<%= project.data.teaser %>)"></div>
      <% end %>
      <div class="p-2">
        <h3 class="text-xl font-semibold mt-2"><%= project.data.title %></h3>
        <p class="text-sm whitespace-pre-line"><%= project.data.excerpt %></p>
        <p class="text-xs text-right"><%= project.date.year %></p>
      </div>
    </a>
  <% end %>
</div>

<h2 class="text-2xl mt-10 mb-3">Writing</h2>
<div class="flex flex-col sm:flex-wrap sm:flex-row gap-4">
  <% collections.posts.resources.each do |post| %>
    <% next if post.data.draft or post.data.categories.include? "devlog" %>
    <a href="<%= post.relative_url %>" class="btn-secondary px-4 p-2">
      <article>
        <span class="text-xl"><%= post.data.title %></span>
        <span class="text-xs"><%= post.date.strftime "%Y" %></span>
      </article>
    </a>
  <% end %>
</div>

